
.hide
  display none

body, h1, h2, h3, h3, h5, h6, .h1, .h2, .h3, .h3, .h5, .h6
  font-family "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Microsoft YaHei", sans-serif

body
  padding-top 50px


@media (min-width: 1200px)
  .container
    width 970px


.blog-header
  margin-top 50px
  margin-bottom 30px

.blog-title
  font-size 5em

.blog-title small
  padding-left 20px
  font-size 0.5em
  color #bbb


.sidebar-module
  padding 15px
  margin 0 -15px 15px

.sidebar-module-inset
  margin-bottom 30px
  padding 15px
  background-color #f5f5f5
  border-radius 4px

.sidebar-module-inset p:last-child,
.sidebar-module-inset ul:last-child,
.sidebar-module-inset ol:last-child
  margin-bottom 0

.sidebar-module.tags a
  display inline-block
  margin-right 10px


.post:first-child
  border-top none
.post
  margin-bottom 50px
//border-top 1px solid #ccc

.post .title
  font-size 2.4em

.post .meta
  margin-bottom 20px
  color #999

.post .meta span
  padding 4px
  color #428bca

.post .meta .author
  font-style italic


.comment-count
  margin-top 20px

.pager
  margin-bottom 80px


.comments
  margin-top 30px
  padding 20px
  background-color #f9f9f9
  border 1px solid #ddd
  border-radius 4px
  //box-shadow 0 0 10px #555

.comment
  margin-bottom 15px
.comment:last-child
  margin-bottom 0

.comment .meta
  margin-bottom 2px

.comment p
  margin 0
